<h2>Create a new Drone</h2>
<form method="POST" action="/Drones/create">
  <div class="mb-3">
    <label for="InputanotherDrone1" class="form-label">Name of new Drone </label>
    <input name="myDrone" type="text" class="form-control" id="InputanotherDrone1">
  </div>
  <div class="mb-3">
    <label for="InputDronePropellers1" class="form-label">Numb. of Propellers</label>
    <input  name="myPropellers" type="text" class="form-control" id="InputDronePropellers1">
  </div>
  <div class="mb-3">
    <label for="InputDroneMaxSpeed1" class="form-label">Max. Speed</label>
    <input  name="myMaxSpeed" type="text" class="form-control" id="InputDroneMaxSpeed1">
  </div>
  <button type="submit" class="btn btn-primary">Submit data for new Drone </button>
</form>
{{!-- Conditionally render if you want --}}
{{#if dataAdded}}
<p>Data was added successfully</p>
{{/if}}